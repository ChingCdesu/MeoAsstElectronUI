{
  "appId": "com.misteo.assistant-arknights",
  "productName": "MeoAssistantArknights",
  "artifactName": "${productName}-v${version}-${arch}_${os}.${ext}",
  "asar": true,
  "asarUnpack": "**\\*.{node,dll}",
  "directories": {
    "output": "release/${version}"
  },
  "electronDownload": {
    "mirror": "https://npm.taobao.org/mirrors/electron/"
  },
  "files": [
    "dist"
  ],
  "mac": {
    "target": "zip",
    "arch": [
      "x64",
      "arm64"
    ]
  },
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "linux": {
    "target": [
      "AppImage"
    ],
    "category": "Tools"
  }
}
