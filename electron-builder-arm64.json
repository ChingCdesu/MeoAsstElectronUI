{
  "appId": "com.maa.assistant-arknights",
  "productName": "MaaAssistantArknights",
  "artifactName": "${productName}-${os}-${arch}-${version}.${ext}",
  "asar": false,
  "asarUnpack": "**\\*.{node,dll}",
  "copyright": "Copyright Â© 2023 Maa Team",
  "directories": {
    "output": "release/${version}",
    "buildResources": "packages/common/resources"
  },
  "electronDownload": {
    "mirror": "https://npmmirror.com/mirrors/electron/"
  },
  "npmRebuild": false,
  "files": [
    "dist"
  ],
  "mac": {
    "target": "zip"
  },
  "win": {
    "target": [
      {
        "target": "zip",
        "arch": [
          "arm64"
        ]
      }
    ]
  },
  "linux": {
    "target": [
      {
        "target": "zip",
        "arch": [
          "arm64"
        ]
      }
    ],
    "category": "Tools"
  }
}
